{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":disableDependencyDashboard",
    ":semanticCommitTypeAll(chore)",
    "group:allNonMajor",
    "customManagers:githubActionsVersions"
  ],
  "rangeStrategy": "bump",
  "labels": ["dependencies"],
  "packageRules": [
    {
      "matchPackagePatterns": ["*"],
      "stabilityDays": 7
    }
  ]
}
